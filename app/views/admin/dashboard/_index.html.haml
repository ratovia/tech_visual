%section.dashboard.shift-tables{data: {workrole: {ids: WorkRole.ids}}}
  %h1.page_title= @thisday
  %table.shift-table{data: {date: DateTime.now.strftime("%Y/%m/%d")}}
    %tr
      %th
      - [*0..23].each do |d|
        - if d >= 8 && d <= 24
          %th
            = d
        - else
          %th.hidden
            = d
    - @users.each do |user|
      - user_shifts = Shift.find_user_shift(user, @thisday)
      %tr
        %td
          = user.name
        - shifts_to_one_array(user_shifts).each_with_index do |is_shift, i|
          - if i >= 8 && i <= 24
            - if is_shift
              %td.color_shift-data{data: {workrole: {id: is_shift}}}
            - else
              %td
          - else
            %td.hidden
    %tr.shift-table__resource
      %td{colspan: 17} 必要リソース
    - @work_roles.each do |wr|
      %tr
        %td= wr.name
        - wr.required_resources.on_thisday(@thisday).each do |rr|
          %td= rr.count
